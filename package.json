{
  "name": "opencode-vscode",
  "displayName": "OpenCode",
  "description": "OpenCode AI coding agent for VSCode",
  "version": "0.0.1",
  "publisher": "opencode",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opencode",
          "title": "OpenCode",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "opencode": [
        {
          "type": "webview",
          "id": "opencode.chatView",
          "name": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "vite build --config vite.config.extension.ts",
    "build:webview": "vite build --config vite.config.ts",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "vite build --config vite.config.extension.ts --watch --mode development",
    "watch:webview": "vite build --config vite.config.ts --watch --mode development",
    "clean": "rm -rf dist out",
    "dev": "vite",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.74.0",
    "concurrently": "^8.x",
    "typescript": "^5.x",
    "vite": "^5.x",
    "vitest": "^1.x"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^0.15.18",
    "solid-js": "^1.9.10",
    "vite-plugin-solid": "^2.11.10"
  }
}
